<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".Profile_Creation">

    <TextView
            android:text="Welcome user,lets get started by setting up your profile"
            android:layout_width="291dp"
            android:layout_height="112dp" android:id="@+id/textView3"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.216" app:layout_constraintVertical_bias="0.109"/>

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="204dp" android:layout_height="160dp"
                                                  android:id="@+id/circle1"
                                                  android:src="@drawable/common_google_signin_btn_icon_dark"
                                                  app:layout_constraintBottom_toBottomOf="parent"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  app:layout_constraintHorizontal_bias="0.497"
                                                  app:layout_constraintVertical_bias="0.359">
    </de.hdodenhof.circleimageview.CircleImageView>
    <EditText
            android:layout_width="295dp"
            android:layout_height="71dp"
            android:background="@drawable/edittextstyles"
            android:inputType="textPersonName"
            android:textStyle="bold|italic"
            android:hint="Please Enter a username"
            android:textColorHint="@color/white"
            android:padding="25dp"
            android:textColor="@color/white"
            android:ems="10"
            android:id="@+id/et5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.627" app:layout_constraintHorizontal_bias="0.445"/>
    <androidx.appcompat.widget.AppCompatButton
            android:text="Create Profile"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:background="@drawable/buttonstyles"
            android:layout_width="295dp"
            android:layout_height="54dp" android:id="@+id/button4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintVertical_bias="0.741"/>
    <ImageView
            android:layout_width="35dp"
            android:layout_height="36dp" app:srcCompat="@drawable/meta" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.422"
            app:layout_constraintVertical_bias="0.936"/>
    <TextView
            android:text="Meta"
            android:textStyle="bold|italic"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.925" app:layout_constraintHorizontal_bias="0.534"/>
</androidx.constraintlayout.widget.ConstraintLayout>